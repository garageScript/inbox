<style>
  * {
    font-family: 'Open Sans';
    font-weight: 100;
    cursor: default;
  }
  @media (prefers-color-scheme: light) {
    body {
      background-color: rgb(230,230,230);
      color: rgb(50,50,50);
    }
    blockquote {
      background-color: rgb(220,220,220);
      border-left: 3px solid rgb(200,200,200);
    }
    h1 {
      border-bottom: 1px solid rgb(200,200,200)
    }
    input, textarea {
      background-color: white;
      box-shadow: 2px 2px 2px rgb(200, 200, 200) inset;
    }
  }
  @media (prefers-color-scheme: dark) {
    body {
      background-color: rgb(50,50,50);
      color: rgb(230,230,230);
    }
    blockquote {
      background-color: rgb(55,55,55);
      border-left: 3px solid rgb(75,75,75);
    }
    h1 {
      border-bottom: 1px solid rgb(75,75,75)
    }
    input, textarea {
      background-color: rgb(235, 235, 235);
      box-shadow: 2px 2px 2px rgb(150, 150, 150) inset;
    }
  }
  body {
    position: relative;
    width: 90vw;
    max-width: 1000px;
    min-width: 500px;
    padding: 1rem;
    margin: auto;
  }
  blockquote {
    margin-left: 0;
    margin-right: 0;
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
    padding: 1rem;
  }
  h1, h2, h3, h4, h5 {
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }
  hr {
    border: 0.5px solid rgb(75,75,75);
  }
  a {
    color: rgb(100, 130, 220);
  }
  a:visited {
    color: rgb(100, 130, 220);
  }
  input {
    color: black;
    border: none;
    padding: 0.5rem;
    box-sizing: border-box;
    text-align: center;
    border-radius: 3px;
    height: 30px;
    width: 200px;
    cursor: text;
  }
  textarea {
    color: black;
    border: none;
    padding: 0.5rem;
    box-sizing: border-box;
    border-radius: 3px;
    cursor: text;
    resize: vertical;
  }
  ::placeholder {
    color: grey;
    font-size: 0.8rem;
  }
  button {
    background-color: rgb(75, 35, 250);
    color: white;
    border: none;
    box-sizing: border-box;
    text-align: center;
    border-radius: 3px;
    height: 30px;
    width: 90px;
    font-size: 12px;
    overflow: hidden;
    white-space: nowrap;
  }
  button:hover {
    background-color: rgb(60, 5, 220);
    cursor: pointer;
  }
  button:active {
    background-color: rgb(70, 10, 235);
  }
</style>

<link href="//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700&amp;subset=latin" rel="stylesheet">
