  }
  #writer-cc {
    margin: 0 0.5rem;
  }
  #writer-content-wrap {
    width: 100%;
    height: 400px;
    perspective: 4000px;
  }
  #writer-content {
    position: relative;
    width: 100%;
    height: 100%;
    transition: transform 600ms;
    transform-style: preserve-3d;
  }
  #writer-content.flip {
    transform: rotateY(180deg);
  }
  #writer-content > * {
    position: absolute;
    width: 100%;
    height: 100%;
    margin-bottom: 1rem;
    -webkit-backface-visibility: hidden;
